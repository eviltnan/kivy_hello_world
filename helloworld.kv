#:import App kivy.app.App
<Navigation@BoxLayout>:
    size_hint_y: .2
    padding: dp(10)
    spacing: dp(5)
    Button:
        text: "previous"
        on_press: App.get_running_app().root.current = App.get_running_app().root.previous()
    Button:
        text: "next"
        on_press: App.get_running_app().root.current = App.get_running_app().root.next()


<Logo@Image>:
    source: "logo.png"
    size_hint: .3, .3

<Hello@Screen>:
    name: 'hello'
    BoxLayout:
        orientation: 'vertical'
        Label:
            color: 0, 0, 0, 1
            text: "Hey kivy ;)"
        Navigation

<AnchorLayoutScreen@Screen>:
    name: 'anchor'
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            id: layout
            Logo:
                text: "Label"
        GridLayout:
            size_hint_y: .2
            padding: dp(10)
            spacing: dp(5)
            rows: 3
            cols: 3
            Button:
                text: 'left'
                on_press: layout.anchor_x = self.text
            Button:
                text: 'center'
                on_press: layout.anchor_x = self.text
            Button:
                text: 'right'
                on_press: layout.anchor_x = self.text
            Button:
                text: 'top'
                on_press: layout.anchor_y = self.text
            Button:
                text: 'center'
                on_press: layout.anchor_y = self.text
            Button:
                text: 'bottom'
                on_press: layout.anchor_y = self.text
        Navigation


<BoxLayoutScreen@Screen>:
    name: 'box'
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            id: layout
            Logo
            Logo
            Logo
            Logo
        BoxLayout
            size_hint_y: .2
            padding: dp(10)
            spacing: dp(5)

            Button:
                text: 'horizontal'
                on_press: layout.orientation = self.text
            Button:
                text: 'vertical'
                on_press: layout.orientation = self.text
        Navigation

<FloatLayoutScreen@Screen>:
    name: 'float'
    BoxLayout:
        orientation: 'vertical'
        FloatLayout:
            id: layout
            Logo
                id: logo
                pos_hint: {'center_x': .3, 'center_y': .3}
        BoxLayout
            size_hint_y: .2
            padding: dp(10)
            spacing: dp(5)

            Button:
                text: 'x 0.3'
                on_press: logo.pos_hint = {'center_x': .3, 'center_y': .3}
            Button:
                text: 'x 0.6'
                on_press: logo.pos_hint = {'center_x': .6, 'center_y': .3}
        Navigation

<GridLayoutScreen@Screen>:
    name: 'grid'
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            cols: 3
            rows: 3
            id: layout
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo

        BoxLayout
            size_hint_y: .2
            padding: dp(10)
            spacing: dp(5)

            Button:
                text: '4x2'
                on_press: layout.cols = 4; layout.rows = 2
            Button:
                text: '3x3'
                on_press: layout.cols = 3; layout.rows = 3
        Navigation

<StackLayoutScreen@Screen>:
    name: 'stack'
    BoxLayout:
        orientation: 'vertical'
        StackLayout:
            id: layout
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo

        BoxLayout
            size_hint_y: .2
            padding: dp(10)
            spacing: dp(5)

            Button:
                text: 'lr-tb'
                on_press: layout.orientation = self.text
            Button:
                text: 'rl-tb'
                on_press: layout.orientation = self.text

        Navigation

<PageLayoutScreen@Screen>:
    name: 'page'
    BoxLayout:
        orientation: 'vertical'
        PageLayout:
            id: layout
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo
            Logo

        Navigation

<HelloWidget>:
    Hello
    AnchorLayoutScreen
    BoxLayoutScreen
    FloatLayoutScreen
    GridLayoutScreen
    StackLayoutScreen
    PageLayoutScreen